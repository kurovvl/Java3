<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<GridPane fx:id="parentBox" fx:controller="ChatController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <TextArea
            fx:id="allMessages"
            wrapText="true"
            GridPane.columnSpan="2"
            GridPane.rowIndex="0"
            GridPane.columnIndex="0"
            prefWidth="600"
            maxWidth="600"
            editable="false"
            onKeyPressed="#onKeyPressedDummy">
        <GridPane.margin>
            <Insets left="5" right="5"></Insets>
        </GridPane.margin>
    </TextArea>
    <TextField
            fx:id="msgText"
            GridPane.rowIndex="1"
            GridPane.columnIndex="0"
            GridPane.hgrow="ALWAYS"
            onKeyPressed="#onMsgTextKeyPressed"
            promptText="Напишите что нибудь">
        <GridPane.margin>
            <Insets left="5"></Insets>
        </GridPane.margin>
    </TextField>

    <Button
            fx:id="sendBtn"
            text="Отправить"
            GridPane.rowIndex="1"
            GridPane.columnIndex="1"
            GridPane.halignment="RIGHT"
            onAction="#onSendBtnClick"
            onKeyPressed="#onKeyPressedDummy">
        <GridPane.margin>
            <Insets right="5"></Insets>
        </GridPane.margin>
    </Button>
</GridPane>